<main>
  <div class="container-fluid px-4">
    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <div class="row mt-4">
      <div class="col-6">
        <%= form_for @category, url: admin_categories_path do |f| %>
          <% if @category.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @category.errors.full_messages.each do |msg| %>
                  <li class="alert-danger"><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label>Loại sản phẩm</label>
            <%= f.text_field :name, class:"form-control" %>
            <small id="emailHelp" class="form-text text-muted">Nhập vào loại sản phẩm</small>
          </div>
          <button type="submit" class="btn btn-primary">Thêm </button>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'list_category', collection: @categories %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>