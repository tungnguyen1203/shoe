<% provide(:title, "Danh sách khách hàng") %>

<div class="container-fluid sb-nav-fixed">

  <%= render 'admin/dashboard/top_nav' %>
  <div id="layoutSidenav">
    <%= render 'admin/dashboard/layout_side_nav' %>
    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid px-4">
         
          
          <div class="row mt-4">
            <div class="col-6">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Ngày tạo</th>
                  </tr>
                </thead>
                <tbody>
                  <% @customers.each_with_index do |customer, index| %>
                  <tr>
                    <th scope="row"><%= index+1 %></th>
                    <td><%= customer.user_name %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.created_at.to_date() %></td>
                    <td>
                      <%=link_to  admin_customer_path(customer), method: :delete,data: { confirm: "bạn chắc chưa?" }, class:"btn btn-outline-danger" do %>
                      <i class="fa-solid fa-trash-can"></i>
                      <% end %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
      <%= render 'admin/dashboard/footer' %>
    </div>
  </div>
</div>