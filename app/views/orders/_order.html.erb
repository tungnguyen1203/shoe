<div class="container ">
  <div class="row" style="font-weight:bold">
    <div class="col-6">
      <p>User: <%= order.user.user_name %> </p>
      <p>Address:<%= order.address %> </p>
    </div> 
    <div class="col-6">
      <p>Total: <%= order.sub_total %></p>
      <p>Date: <%= order.updated_at.to_date %></p>
      <p>Status: <%= order.status %></p>
    </div> 
    </div>
    <div class="row">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">total price</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "orders/order_detail",  collection: order.order_details %>
        </tbody>
      </table>
    </div>
    <hr>
</div>